{{#each ideas}}
    <div class="card card-body mb-1">
        <h4>{{title}}</h4>
        <p>{{details}}</p>
        <a class="btn btn-dark btn-block mb-1" href="/ideas/edit/{{id}}">Edit</a>
        <form action="/ideas/{{id}}?_method=DELETE" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn btn-danger btn-block" value="Delete" onclick="return confirm('Are you sure?')">
        </form>
    </div>
{{else}}
    <p>There is no ideas</p>
{{/each}}